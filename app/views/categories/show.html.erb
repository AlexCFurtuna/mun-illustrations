<div class="category div">
  <h2 class="text-center"><%= @category.name %> </h2>
</div>
<div class="category buttons">
  <% if admin_signed_in? %>
  <%= link_to 'New Image', new_image_path, class: "btn btn-primary pull-left" %>
  <%= link_to "Edit Category", edit_category_path , class: "btn btn-primary pull-right" %>
  <% end %>
</div>
<div class="transitions-enabled" id="images">
  <% @images.each do |image| %>
    <div class="box panel panel-default">
      <%= link_to (image_tag image.image_url), image  unless image.image_url.blank? %>
      <h2> <%= link_to image.image_title, image %> </h2>
    </div>
  <% end %>
</div>
